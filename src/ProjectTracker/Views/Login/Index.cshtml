@model Login

@{
    ViewBag.Title = "Log In";
}
@section Styles
{
    <style>
        .jumbotron {
            text-align: center;
        }
        .section {
            display: inline-block;
        }
        .spacer {
            height: 10px;
        }
        #fields {
            text-align: left;
            width: 100%;
            max-width: 300px;
        }
        label {
            text-align: left !important;
            padding-top: 6px !important;
        }
        label[for="Remember"] {
            font-weight: normal;
            font-size: 9pt;
        }
        #Remember {
            float: left;
            margin-right: 10px;
        }
    </style>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal short-fields jumbotron">
        <div id="header" class="section alert alert-info">
            <h4>Have an app idea to make Commerce better?</h4>
            Log in to <strong>browse</strong> and <strong>vote</strong> for submitted ideas and <strong>submit</strong> your own!
        </div>

        <div class="spacer hidden-xxs hidden-xs"></div>
        <div class="spacer hidden-xxs"></div>
        
        <div id="fields" class="section">
            @Html.ValidationSummary(true)

            <div>
                @{ System.Linq.Expressions.Expression<Func<Login, string>> expr = model => model.Username; }
                @Html.LabelFor(expr, new { @class = "control-label" })
                @Html.EditorFor(expr, new { htmlAttributes = new { @class = "focus form-control" } })
                @Html.ValidationMessageFor(expr)

                @{ expr = model => model.Password; }
                @Html.LabelFor(expr, new { @class = "control-label" })
                @Html.EditorFor(expr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(expr)

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Remember, new { htmlAttributes = new { @class = "checkbox", } })
                        @Html.LabelFor(model => model.Remember, new { @class = "control-label" })
                    </div>
                </div>

                <div class="form-group form-buttons">
                    <div class="col-md-10">
                        <input type="submit" value="Log In" class="btn btn-primary btn-submit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $(".focus").focus();
    </script>
}