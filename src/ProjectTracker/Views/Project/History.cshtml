@model IEnumerable<ProjectEdit>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "History";
}

<h3 class="list-title">
    @Html.ActionLink("Project Ideas", "Index")
    > @HtmlBuilder.DetailsLink(Url, "Project", ViewBag.ProjectID, ViewBag.ProjectTitle, null, true)
</h3>
@if (Model.Count() == 0)
{
    @Html.Raw("No one has edited this project yet.")
}
else
{
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Edited By</th>
                <th>Date</th>
            </tr>
        </thead>

        @foreach (ProjectEdit item in Model)
        {
            <tr>
                <td>@HtmlBuilder.DetailsLink(Url, "Employee", item.Editor_Id, item.Editor.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
            </tr>
        }
    </table>
}