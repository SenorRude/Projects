@{
    RouteValueDictionary htmlAttributes;
    if (ViewData["htmlAttributes"] != null)
    {
        htmlAttributes = HtmlHelper.AnonymousObjectToHtmlAttributes(ViewData["htmlAttributes"]);
    }
    else
    {
        htmlAttributes = new RouteValueDictionary();
    }
    htmlAttributes.Add("placeholder", ViewData.ModelMetadata.Watermark);
}
@Html.TextArea("", ViewData.TemplateInfo.FormattedModelValue.ToString(), 0, 0, htmlAttributes)
@if (htmlAttributes.ContainsKey("class") && htmlAttributes["class"].ToString().Contains("length-help"))
{
    <p class="help-block"></p>
}